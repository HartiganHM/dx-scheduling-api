# This is the schema representation of your database in graphql language.

type User {
  id: ID! @isUnique
  name: String!
  email: String
  roles: [Role!]! @relation(name: "RoleOnUser")
}

type Role {
  id: ID! @isUnique
  name: String!
  permissions: [Permission!]! @relation(name: "PermissionOnRole")
  users: [User!]! @relation(name: "RoleOnUser")
}

type Permission {
  id: ID! @isUnique
  name: String!
  roles: [Role!]! @relation(name: "PermissionOnRole")
}